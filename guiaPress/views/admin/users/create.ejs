<%- include ("../../partials/header.ejs") %> <%- include ("../../partials/navbar.ejs") %>

<div class="container">
  <div class="card mt-5">
    <div class="card-header">Criação de usuario</div>
    <div class="card-body">
      <form
        action="/users/create"
        method="POST"
      >
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="email@exemplo.com"
        />
        <br />
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="******"
        />
        <br />
        <button
          type="submit"
          class="btn btn-success"
        >
          Criar
        </button>
      </form>
    </div>
  </div>
</div>

