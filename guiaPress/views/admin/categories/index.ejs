<%- include("../../partials/header.ejs") %>
<body>
  <%- include("../../partials/navbar.ejs") %>

  <div class="container">
    <hr />
    <h2>Categorias</h2>
    <hr />
    <table class="table table-bordered">
      <!--  cabecalho -->
      <thead>
        <!-- linha -->
        <tr>
          <!-- coluna -->
          <th>ID</th>
          <th>Titulo</th>
          <th>Slug</th>
          <th>Ações</th>
        </tr>
      </thead>
      <!-- corpo da tabela  -->
      <tbody>
        <% categories.forEach(category => { %>
        <!-- linha -->
        <tr>
          <!-- coluna -->
          <th><%=category.id%></th>
          <th><%=category.title%></th>
          <th><%=category.slug%></th>
          <th>Ações</th>
          <% }) %>
        </tr>
      </tbody>
    </table>
  </div>
</body>
<%- include("../../partials/footer.ejs") %>
