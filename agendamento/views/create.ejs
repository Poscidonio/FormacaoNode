      method="POST"
      action="create"
    >
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Nome do paciente"
        class="form-control"
      />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="email@email.com"
        class="form-control"
      />
      <input
        type="text"
        name="cpf"
        placeholder="CPF"
        class="form-control cpf"
      />
      <input
        type="text"
        name="description"
        id="description"
