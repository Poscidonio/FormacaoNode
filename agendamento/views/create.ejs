      />
      <input
        type="date"
        name="date"
        id="date"
        placeholder="12/12/1999"
        class="form-control"
      />
      <input
        type="time"
        name="time"
        id="time"
        class="form-control"
      />
      <button class="btn btn-success">Agendar</button>
    </form>
  </body>
